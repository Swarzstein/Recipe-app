<p style="color: green"><%= notice %></p>

<div class="modal fade" id="addRecipeModal" tabindex="-1" aria-labelledby="addRecipeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addRecipeModalLabel">Add New Recipe</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

<h1 class="text-center">Recipes</h1>

<% @recipes.each do |recipe| %>
    <div class="my-3">
  <a href="<%= recipe_path(recipe) %>"  id="recipe-<%= recipe.id %>">
      <h2><%= recipe.name %></h2>
      <p><%= recipe.description %></p>
      <p>Public: <%= recipe.public ? 'Yes' : 'No' %></p>
      <hr>
  </a>
      <%= link_to 'Remove', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %>
    </div>
<% end %>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRecipeModal">
  Add New Recipe
</button>

