<p style="color: green"><%= notice %></p>

<h1 class="text-center">Inventories</h1>
<button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#exampleModal" data-whatever="@mdo">Create new inventory</button>
<!-- link_to 'Create new inventory', new_inventory_path %>-->
<div class="container mt-5" id="inventories">
  <br/>
  <% @inventories.each do |inventory| %>
    <div class="row border border-2 border-black mb-4" id=<%= "inventory-#{inventory.id}" %>>
      <div class="col-4 p-2 text-center">
        <h3><%= link_to inventory.name, inventory_path(inventory) %></h3>
        <%= link_to "Remove", inventory, 'data-turbo-method': :delete %>
      </div>
      <div class="col-8 p-2">
        <% inventory.inventory_food.each do |food| %>
          <span><%= food.food.name %>, </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Inventory</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
